generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============ Enums ============

enum AmbulanceType {
  BLS // Basic Life Support
  ALS // Advanced Life Support
  CCT // Critical Care Transport
  RRV // Rapid Response Vehicle
}

enum AmbulanceStatus {
  IDLE
  EN_ROUTE
  ON_SCENE
  TRANSPORTING
}

enum IncidentStatus {
  PENDING
  DISPATCHED
  EN_ROUTE
  ON_SCENE
  TRANSPORTING
  COMPLETED
  CANCELLED
}

enum IncidentSeverity {
  LOW
  HIGH
}

enum TriageType {
  STEMI
  Stroke
  Trauma
  Burns
  Pediatric
  General
}

// ============ Models ============

model Hospital {
  id           Int         @id @default(autoincrement())
  name         String
  lat          Float
  lng          Float
  capabilities String[] // e.g. ["PCI", "TRAUMA", "STROKE"]
  ambulances   Ambulance[]
  incidents    Incident[]  @relation("DestinationHospital")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ambulance {
  id         Int             @id @default(autoincrement())
  callsign   String          @unique // e.g. "SJMC-ALS-01"
  type       AmbulanceType
  status     AmbulanceStatus @default(IDLE)
  currentLat Float
  currentLng Float
  hospitalId Int
  hospital   Hospital        @relation(fields: [hospitalId], references: [id], onDelete: Cascade)
  incidents  Incident[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Incident {
  id         String           @id @default(uuid())
  lat        Float
  lng        Float
  severity   IncidentSeverity @default(LOW)
  triageType TriageType       @default(General)
  status     IncidentStatus   @default(PENDING)

  // Assigned ambulance
  assignedAmbulanceId Int?
  assignedAmbulance   Ambulance? @relation(fields: [assignedAmbulanceId], references: [id])

  // Destination hospital
  destinationHospitalId Int?
  destinationHospital   Hospital? @relation("DestinationHospital", fields: [destinationHospitalId], references: [id])

  // Reporting user (victim)
  reportedByUserId Int?
  reportedBy       User? @relation(fields: [reportedByUserId], references: [id])

  // Route and timing info
  etaSeconds    Int?
  routeGeometry Json? // GeoJSON LineString

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  phone     String?
  lat       Float // Last known location
  lng       Float
  incidents Incident[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
